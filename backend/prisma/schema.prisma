// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js 需要的表
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("player")
  accounts      Account[]
}

// 最新快照（用于 Redis 崩溃后的恢复；单房间单条记录）
model RoundSnapshot {
  id                String   @id @default(cuid())
  roomId            String
  currentRound      Int
  status            String   @default("waiting") // waiting | playing | ended（恢复只用 waiting）
  started           Boolean  @default(false)     // 对应 Redis gameStarted
  survivorEmails    String[]                    // 上一轮结束后仍存活的邮箱列表（恢复核心）
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
  
  eliminations      RoundElimination[]
  
  @@unique([roomId])
  @@index([updatedAt])
}

// 每轮淘汰名单
model RoundElimination {
  id                String   @id @default(cuid())
  roundSnapshotId   String
  userEmail         String
  eliminatedReason String   // 'no_answer' | 'majority_choice'
  eliminatedAt      DateTime @default(now())
  
  roundSnapshot     RoundSnapshot @relation(fields: [roundSnapshotId], references: [id], onDelete: Cascade)
  
  @@index([roundSnapshotId])
  @@index([userEmail])
}

// 游戏最终结果（关键数据，必须持久化）
model GameResult {
  id                String   @id @default(cuid())
  roomId            String
  winnerEmail       String?  // 获胜者邮箱（如果有）
  tierEmails        String[] // 平局名单（如果有）
  finalRound        Int      // 最终轮次
  totalRounds       Int      // 总轮数
  endedAt           DateTime  @default(now())
  createdAt         DateTime  @default(now())
  
  @@unique([roomId]) // 每个房间只有一个最终结果
  @@index([roomId])
  @@index([endedAt])
}
